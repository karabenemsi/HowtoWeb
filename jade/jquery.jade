                section#g-3
                  h1.sectionheading Syntax
                  h3 Syntax
                  .codebox(style="font-size:2rem")
                      pre(class="brush: js").
                          $(selector).action()
                  h3 Kommentare
                  .codebox(style="font-size:2rem")
                      pre(class="brush: js").
                          // Dies ist ein Kommentar
                          $("p").hide();
                  h3 Hauptfunktion
                  .codebox(style="font-size:2rem")
                      pre(class="brush: js").
                        $(document).ready(function(){
                         // jQuery methods go here...
                        }); 
                section#g-4
                  h1.sectionheading Selectors
                  .codebox
                    pre(class="brush: js").
                      $('p')
                      
                      $('.button')
                      
                      $('#js_id')
                      
                      $('.button::before')
                section#g-5
                  h1.sectionheading Filtern
                  .codebox
                    pre(class="brush: js").
                      $(function(){
                        
                        $('div p').first();
                        
                        $('div p').last();
                        
                        $('p').eq(1); //Start with 0
                        
                        $('p').filter('.big');
                        
                        $('p').not('.big');
                        
                      });
                section#g-6
                  h1.sectionheading Events
                  .codebox
                    pre(class="brush: js").
                      $(function(){
                      
                        $('.button').click(function(){
                          alert('You clicked me!'):
                        });
                        
                        $('.button').hover(function(){
                          alert('You hovered me!'):
                        });
                      
                      });
                  .examplebox
                    .button#js_ex_6
                    .button#js_ex_7
                  
                section#g-7
                  h1.sectionheading Classes
                  .codebox
                    pre(class="brush: js").
                      $(function(){
                      
                        $('.button').click(function(){
                          $(this).addClass('bg-pink');
                        });
                        
                        $('.button').click(function(){
                          $(this).removeClass('bg-pink');
                        });
                      
                      });
                  .examplebox
                    .button#js_ex_8
                    .button#js_ex_9(style="background: pink;")
                  
                  
                section#g-8
                  h1.sectionheading CSS
                  .codebox
                    pre(class="brush: js").
                      $(function(){
                      
                        $('.button').click(function(){
                          $(this).css('borderWidth','10px');
                        });
                        
                        $('.button').click(function(){
                          $(this).css({'background':'#548486', 'borderWidth':'15px'});
                        });
                      
                      });
                  .examplebox
                    .button#js_ex_10
                    .button#js_ex_11
                  
                section#g-9
                  h1.sectionheading Hide and Show
                  .codebox
                    pre(class="brush: js").
                      $(function(){
                      
                        $('.button .hide').click(function(){
                          $('#disapear').hide('500');
                        });
                        
                        $('.button .show').click(function(){
                          $('#disapear').show('200');
                        });
                      
                      });
                  .examplebox
                    .button#js_ex_12_1(style="display: block; background: #45fe89;") Hide
                    .button#js_ex_12_2(style="display: block; background: #fe5845;") Show
                    div#js_ex_12(style="display: block; background: #95fe4e;") Hide Me
                      
                  
                  

                  
                

                      

